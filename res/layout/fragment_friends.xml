<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlFriends"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team.artyukh.project.fragments.FriendsFragment" >

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/fragment_container_friends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnRemoveFriend"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/etFriendFilter" >
    </RelativeLayout>
    
    <TextView
            android:id="@+id/tvNoFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="You Have No Friends" />

    <EditText
        android:id="@+id/etFriendFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Filter by Username" />

    <Button
        android:id="@+id/btnRemoveFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Remove Friend" />

</RelativeLayout>